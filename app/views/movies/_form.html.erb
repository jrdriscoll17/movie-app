<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.fields_for :reviews do |r| %>
    <%= r.hidden_field :user_id, value: current_user.id %>
    <%= r.label :rating %>
    <%= r.number_field :rating %><br>
    <%= r.label :content %>
    <%= r.text_area :content %>
  <% end %>
  <%= f.submit %>
<% end %>
